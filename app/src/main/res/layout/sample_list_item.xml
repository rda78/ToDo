<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/frame_layout"
            android:layout_width="56dp"
            android:layout_height="match_parent">

            <View
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_brightness_1_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="center_horizontal"
                android:background="@android:color/black"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/frame_layout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some Titiel Goes Here!" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, sit amet burso long description, very very very long description, coding is, bla bla bla..." />
        </LinearLayout>

        <FrameLayout
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</LinearLayout>